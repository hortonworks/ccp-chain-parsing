<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>com.cloudera.parserchains</groupId>
        <artifactId>parser-chains</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>parser-chains-parsers</artifactId>
    <properties>
        <!-- main dependency versions -->
        <simple-syslog.version>0.0.3</simple-syslog.version>
        <antlr4.version>4.7.2</antlr4.version>
    </properties>
    <repositories>
        <repository>
            <id>bintray</id>
            <url>http://dl.bintray.com/palindromicity/simple-syslog</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    <dependencies>
        <dependency>
            <groupId>com.cloudera.parserchains</groupId>
            <artifactId>parser-chains-core</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <!-- syslog parser dependencies -->
        <dependency>
            <groupId>com.github.palindromicity</groupId>
            <artifactId>simple-syslog</artifactId>
            <version>${simple-syslog.version}</version>
        </dependency>
        <dependency>
            <groupId>org.antlr</groupId>
            <artifactId>antlr4</artifactId>
            <version>${antlr4.version}</version>
        </dependency>
        <!-- test dependencies -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>${junit.jupiter.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-library</artifactId>
            <version>${hamcrest.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>${mockito.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
